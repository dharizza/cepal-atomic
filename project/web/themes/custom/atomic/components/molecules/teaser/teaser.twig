{% set prefix = 'card' %}

<div class="{{ prefix }}" style="width: 18rem;">
  <div class="{{ prefix }}-img-top">
    {% block image_card %}{% endblock %}
  </div>
  <div class="{{ prefix }}-body">
    <small class="{{ prefix }}-date">{{ date }}</small>
    <h5 class="{{ prefix }}-title">{{ title }}</h5>
    <div class="{{ prefix }}-text">{{ text }}</div>
    {{ include('atomic:button', {
        text: 'Read more'|t,
        url: url,
        variant: 'btn-link'
    }, with_context = false) }}
  </div>
</div>